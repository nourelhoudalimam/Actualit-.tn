<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>
   
    <div class="text-center center-div" id="login">
      <div class="container w-25 border py-5">
          <div class="title pb-5">
              <h2 class="font-weight-bold"> SystÃ©me de connexion</h2>
              <h6>Connecter en tant que administrateur</h6>
              <% if(locals.logout){ %>
                  <div class="alter alert-success text-center">
                      <%= logout %>
                  </div>
              <% } %>
          </div>
          <form action="/router/Admin-login" method="POST" class="pt-3">
              <div class="form-group">
                <small class="form-text text-muted text-left">entrer l'email de l'administrateur</small>  
                <input type="email" class="form-control" placeholder="email" name="email">
                 
              </div>
              <div class="form-group">
                <small class="form-text text-muted text-left">entrer le mot de passe</small> 
                <input type="password" class="form-control" name="password" placeholder="password">
                 
                 </div>
              <button type="submit" class="btn btn-success rounded-pill">Connecter</button>
              <% if(locals.error){ %>
                <div class="alert text-center">
                    <%= error %>
                </div>
            <% } %>
        </form>
      </div>
  </div>
  
      <%- include('./partials/footer.ejs') %>
